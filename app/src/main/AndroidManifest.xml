<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dyly.bloomu.edu.gardenplannerapp" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="Garden Planner" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.BUOCActivity"
            android:label="BUOC" />
        <activity
            android:name=".Activities.AboutAppActivity"
            android:label="About Application" />
        <activity
            android:name=".Activities.SupportActivity"
            android:label="Support" />
        <activity
            android:name=".Activities.GardenNotesActivity"
            android:label="Garden Notes" />
        <activity
            android:name=".Activities.BedOptionsActivity"
            android:label="@string/title_activity_bed_options" >
        </activity>
        <activity
            android:name=".Activities.BedLayoutActivity"
            android:label="@string/title_activity_bed_layout" >
        </activity>
        <activity
            android:name=".Activities.BedLayoutModifyActivity"
            android:label="Modify Bed Layout" />
        <activity
            android:name=".Activities.BedHistoryActivity"
            android:label="@string/title_activity_bed_history" >
        </activity>
        <activity
            android:name=".Activities.BedNotesActivity"
            android:label="@string/title_activity_bed_notes_actvity" >
        </activity>
        <activity
            android:name=".Activities.BedImagesActivity"
            android:label="@string/title_activity_bed_images" >
        </activity>
        <activity
            android:name=".Activities.AddNewNoteActivity"
            android:label="@string/title_activity_add_new_note"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".Activities.AddNewImageActivity"
            android:label="@string/title_activity_add_new_image" >
        </activity>
        <activity
            android:name=".Activities.NoteViewerActivity"
            android:label="@string/title_activity_note_viewer"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
