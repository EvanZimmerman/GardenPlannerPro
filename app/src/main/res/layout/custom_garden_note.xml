<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:ellipsize="end">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/gardenNotePriorityImage"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/yellow_exclamation_mark_drawable" />

    <TextView style="@style/autoscroll"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="24dp"
        android:maxLines="1"
        android:paddingBottom="24dp"
        android:id="@+id/gardenNotePreviewSubject"
        android:textSize="15sp"
        android:text="Here is some text with more stuff"
        android:ellipsize="end"/>

</LinearLayout>