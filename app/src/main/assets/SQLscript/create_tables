CREATE TABLE IF NOT EXISTS garden(_id INTEGER PRIMARY KEY AUTOINCREMENT, bedID INTEGER NOT NULL, noteID INTEGER NOT NULL);

CREATE TABLE IF NOT EXISTS bed(_id INTEGER PRIMARY KEY AUTOINCREMENT, gardenID INTEGER NOT NULL);

CREATE TABLE IF NOT EXISTS image(_id INTEGER PRIMARY KEY AUTOINCREMENT, gardenID INTEGER, bedID INTEGER, image BLOB);

CREATE TABLE IF NOT EXISTS layout(_id INTEGER PRIMARY KEY AUTOINCREMENT, bedID INTEGER NOT NULL, image BLOB);

CREATE TABLE IF NOT EXISTS note(_id INTEGER PRIMARY KEY AUTOINCREMENT,gardenID INTEGER, bedID INTEGER, subject STRING NOT NULL, note STRING NOT NULL);

CREATE TABLE IF NOT EXISTS history(_id INTEGER PRIMARY KEY AUTOINCREMENT, bedID INTEGER NOT NULL, plantHistoryID INTEGER, workHistoryID INTEGER, harvestHistoryID INTEGER);

CREATE TABLE IF NOT EXISTS plant_history(_id INTEGER PRIMARY KEY AUTOINCREMENT, date DATE NOT NULL, note STRING NOT NULL);

CREATE TABLE IF NOT EXISTS work_history(_id INTEGER PRIMARY KEY AUTOINCREMENT, date DATE NOT NULL, note STRING NOT NULL);

CREATE TABLE IF NOT EXISTS harvest_history(_id INTEGER PRIMARY KEY AUTOINCREMENT, date DATE NOT NULL, note STRING NOT NULL);